rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /spaces/{spaceId} {
      allow read: if true;
      match /accessories/{accId} {
        allow read, write: if true;
      }
    }

    match /logs/{docId} {
      allow read, write: if true;
    }

    match /counters/{docId} {
      allow read, write: if true;
    }

    match /{document=**} {
      allow read: if true;
    }
  }
}
